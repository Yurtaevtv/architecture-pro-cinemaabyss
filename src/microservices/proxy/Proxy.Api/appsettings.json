{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Yarp": {
    "Routes": {
      "monolith": {
        "ClusterId": "monolith",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ],
        "Order": 1
      },
      "microservices-movies": {
        "ClusterId": "movies",
        "Match": {
          "Path": "/api/movies/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/movies/{**catch-all}" }
        ],
        "Order": 0
      },
      "microservices-events": {
        "ClusterId": "events",
        "Match": {
          "Path": "/api/events/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/events/{**catch-all}" }
        ],
        "Order": 0
      }
    },
    "Clusters": {
      "movies": {
        "LoadBalancingPolicy": "Cancary"
        }
      }
  }
}
